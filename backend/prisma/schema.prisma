generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  email     String  @unique
  id        Int     @default(autoincrement()) @id
  latitude  Float?
  longitude Float?
  name      String
  password  String
  whatsapp  String? @unique
}

model Category {
  id      Int       @default(autoincrement()) @id
  title   String
  Product Product[]
}

model Ingredient {
  id        Int     @default(autoincrement()) @id
  price     Float?
  productId Int
  title     String
  Product   Product @relation(fields: [productId], references: [id])
}

model Product {
  category   Int
  id         Int          @default(autoincrement()) @id
  image      String
  price      Float?
  title      String
  Category   Category     @relation(fields: [category], references: [id])
  Ingredient Ingredient[]
  Size       Size[]
}

model Size {
  id        Int     @default(autoincrement()) @id
  price     Float
  productId Int
  title     String
  Product   Product @relation(fields: [productId], references: [id])
}